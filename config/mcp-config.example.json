{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "MCP 服务器配置文件示例 - 放置于 ~/.copilot/mcp-config.json",
  "mcpServers": {
    "weather": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropics/weather-mcp"
      ],
      "env": {
        "WEATHER_API_KEY": "${WEATHER_API_KEY}"
      },
      "disabled": false,
      "alwaysAllow": []
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "disabled": false
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "disabled": false
    }
  }
}
