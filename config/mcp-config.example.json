{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "MCP 服务器配置文件示例 - 放置于 ~/.copilot/mcp-config.json",
  "mcpServers": {
    "_说明_stdio类型": {
      "$comment": "stdio 类型：本地进程，通过命令行启动",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "tools": ["*"],
      "disabled": true
    },
    "_说明_sse类型": {
      "$comment": "sse 类型：远程服务器，通过 Server-Sent Events 通信",
      "type": "sse",
      "url": "https://api.example.com/mcp/sse",
      "headers": {
        "Authorization": "Bearer ${API_TOKEN}"
      },
      "tools": ["*"],
      "disabled": true
    },
    "blinko": {
      "$comment": "Blinko 笔记服务 - https://github.com/BryceWG/mcp-server-blinko",
      "command": "npx",
      "args": ["-y", "mcp-server-blinko@0.0.9"],
      "env": {
        "BLINKO_DOMAIN": "http://your-blinko-server:1111",
        "BLINKO_API_KEY": "${BLINKO_TOKEN}"
      },
      "tools": ["*"],
      "disabled": false
    }
  }
}
